<p id="notice"><%= notice %></p>

<h1>Shops</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone no</th>
      <th>Address</th>
      <th>City</th>
      <th>Open time</th>
      <th>Close time</th>
      <th>Website</th>
      <th>Email</th>
      <th>Owner</th>
      <th>show</th>
      <th>Edit</th>
      <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.phone_no %></td>
        <td><%= shop.address %></td>
        <td><%= shop.city %></td>
        <td><%= shop.open_time.strftime("%H:%M:%S") %>am</td>
        <td><%= shop.close_time.strftime("%H:%M:%S") %>pm</td>
        <td><%= link_to shop.website, shop.website, target: "_blank" %></td>
        <td><%= shop.email %></td>
        <td>
          <% shop.owners.each do |owner| %>
            <%= owner.name %><br>
          <% end %>
        </td>
        <td><%= link_to 'Show', shop,class: 'btn btn-primary'  %></td>
        <td><%= link_to 'Edit', edit_shop_path(shop),class: 'btn btn-primary'  %></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-primary'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Shop', new_shop_path,class: 'btn btn-primary'  %><br><br>
