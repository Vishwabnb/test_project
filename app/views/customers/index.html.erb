<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact no</th>
      <th>Address</th>
      <th>City</th>
      <th>Email</th>
      <th>Shop</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>

        <td><%= customer.name %></td>
        <td><%= customer.contact_no %></td>
        <td><%= customer.address %></td>
        <td><%= customer.city %></td>
        <td><%= customer.email %></td>
        <td><%= customer.shop.name %></td>
        <td><%= link_to 'Show', customer,class: 'btn btn-primary'  %></td>
        <% if customer == current_customer %>
          <td> <%= link_to 'Edit', edit_customer_path(customer), class: 'btn btn-primary'%> </td> 
          <td> <%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
