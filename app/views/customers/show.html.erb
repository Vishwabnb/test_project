<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @customer.name %>
</p>

<p>
  <strong>Contact no:</strong>
  <%= @customer.contact_no %>
</p>

<p>
  <strong>Address:</strong>
  <%= @customer.address %>
</p>

<p>
  <strong>City:</strong>
  <%= @customer.city %>
</p>

<p>
  <strong>Shop:</strong>
  <%= @customer.shop.name %>
</p>

<%= link_to 'Edit', edit_customer_path(@customer),class: 'btn btn-primary'  %> |
<%= link_to 'Back', customers_path, class: 'btn btn-primary'  %>

<h1>Orders</h1>

<% @customer.orders.each do |order| %>
  <div>
    <p>Order ID: <%= order.id %></p>
    <p>Order ID: <%= order.customer.name %></p>
    <p>Order Date: <%= order.date %></p>
    <p>Order Status: <%= order.status %></p>
    <p>Total: <%= order.total %></p>
    <p>Order grand total: <%= order.grand_total %></p>
    ------------------------------------
  </div>
<% end %>
<br><br>

<h1> Payment Details</h1>
<% @customer.orders.each do |order| %>
  <% order.payments.each do |payment| %>
    <div>
      <p>Order ID: <%= order.id %></p>
      <p>Payment Date: <%= payment.date %></p>
      <p>Payment Status: <%= payment.status %></p>
      <p>Amount: <%= payment.amount %></p>
      ------------------------------------
    </div>
  <% end %>
<% end %>

