<p id="notice"><%= notice %></p>

<h1>Owners</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Age</th>
      <th>Dob</th>
      <th>Address</th>
      <th>show</th>
      <th>Edit</th>
      <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.name %></td>
        <td><%= owner.email %></td>
        <td><%= owner.phone %></td>
        <td><%= owner.age %></td>
        <td><%= owner.dob %></td>
        <td><%= owner.address %></td>
        <td><%= link_to 'Show', owner,class: 'btn btn-primary'  %></td>
        <td><%= link_to 'Edit', edit_owner_path(owner) ,class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Owner', new_owner_path,class: 'btn btn-primary'  %>
