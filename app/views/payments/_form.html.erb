<%= form_with(model: payment, local: true) do |form| %>
  <% if payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>
      <% payment.errors.full_messages.each do |message| %>
      <h4><%= message %></h4>
      <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount, { class: 'form-control' } %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.datetime_select :date %>
  </div>

  <div class="field">
    <%= form.label :order_id, "Select order" %>
    <%= form.collection_select :order_id ,Order.all,:id,:id, {include_blank: 'Select order'}, { class: 'form-control' }%>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.text_field :status, { class: 'form-control' } %>
  </div>

  <div class="field">
    <%= form.label :method %>
    <%= form.text_field :method, { class: 'form-control' } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
