<p id="notice"><%= notice %></p>

<h1>Feedbacks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Rating</th>
      <th>Comment</th>
      <th>Customer</th>
      <th>feedback </th>
      <th>feedbackname </th>
      <th>created_at</th>
      <th>show</th>
      <th>Edit</th>
      <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.rating %></td>
        <td><%= feedback.comment %></td>
        <td><%= feedback.customer.name %></td>
        <td><%= feedback.feedbackable_type %></td>
        <td>
          <% if feedback.feedbackable_type == 'Shop' %>
            <%= feedback.feedbackable.name %>
          <% elsif feedback.feedbackable_type == 'Item' %>
            <%= feedback.feedbackable.name %>
          <% elsif feedback.feedbackable_type == 'Order' %>
            <%= feedback.feedbackable.id %>
          <% elsif feedback.feedbackable_type == 'Owner' %>
            <%= feedback.feedbackable.name %>
          <% end %>
        </td>
        <td><%= feedback.created_at %></td>
        <td><%= link_to 'Show', feedback,class: 'btn btn-primary'  %></td>
        <td><%= link_to 'Edit', edit_feedback_path(feedback),class: 'btn btn-primary'  %></td>
        <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-primary'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

