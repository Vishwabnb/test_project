<p id="notice"><%= notice %></p>

<h1>Order Items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Order no</th>
      <th>Item</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Discount</th>
      <th>Tax</th>
      <th>Shipping cost</th>
      <th>show</th>
      <th>Edit</th>
      <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.order.id %></td>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.quantity %></td>
        <td><%= order_item.price %></td>
        <td><%= order_item.discount %></td>
        <td><%= order_item.tax %></td>
        <td><%= order_item.shipping_cost %></td>
        <td><%= link_to 'Show', order_item,class: 'btn btn-primary'  %></td>
        <td><%= link_to 'Edit', edit_order_item_path(order_item),class: 'btn btn-primary'  %></td>
        <td><%= link_to 'Destroy', order_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order Item', new_order_item_path,class: 'btn btn-primary'  %>
